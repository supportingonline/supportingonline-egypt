<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="10dp" />
            <stroke android:width="2px"
                android:color="@color/gray" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right"
        android:right="8dp">
        <layer-list>
            <item android:width="@dimen/_8sdp" android:height="@dimen/_8sdp"
                android:gravity="center" android:bottom="@dimen/_10sdp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/gray" />
                        <stroke android:color="@color/gray"
                            android:width="@dimen/_1sdp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="@dimen/_20sdp" android:height="@dimen/_10sdp"
                android:bottom="@dimen/_20sdp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>

                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>