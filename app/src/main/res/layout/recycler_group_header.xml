<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:padding="@dimen/_5sdp"
    >
    <RelativeLayout
        android:id="@+id/r_gh_layout"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/circel_shape"
        android:layout_gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/r_gh_image"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

   <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
       android:padding="@dimen/_5sdp"
       android:layout_marginLeft="@dimen/_5sdp"
       >
       <TextView
           android:id="@+id/r_gh_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Title"
           android:textSize="@dimen/_14sdp"
           android:layout_gravity="left"
           android:textColor="@color/white"
           />
       <TextView
           android:id="@+id/r_gh_details"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="detauls detaluislk  "
           android:textSize="@dimen/_12sdp"
           android:layout_gravity="left"
           android:textColor="@color/white_h"
           />

   </LinearLayout>


</LinearLayout>