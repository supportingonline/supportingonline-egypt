<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/r_request_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:padding="@dimen/_3sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/r_request_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_profile"
            />
        <TextView
            android:id="@+id/r_request_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/lato"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/r_request_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25/6/2019"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/flor"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:weightSum="2"
        android:paddingVertical="@dimen/_3sdp"
        >

        <RelativeLayout
            android:id="@+id/r_request_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rectangle1"
            android:backgroundTint="@color/blue"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >


            <TextView
                android:id="@+id/d_friend_chattext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/accept"
                android:fontFamily="@font/flor"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_8sdp"
                />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/ic_check"
                android:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_15sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r_request_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rectangle1"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cancel"
                android:fontFamily="@font/flor"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_8sdp"
                />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/ic_cancel"
                android:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_15sdp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>