<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmJoinGroupActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_data"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/confirm_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kind"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/lato"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_full_name"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|italic"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/confirm_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/rectangle_stroke_edite"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_6sdp"
            android:inputType="textNoSuggestions"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_owen_phone"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|italic"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/confirm_edit_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/rectangle_stroke_edite"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_6sdp"
            android:inputType="phone"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:weightSum="4">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="@string/price_of_the_model"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold|italic"
                android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/confirm_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/rectangle1"

            />


    </LinearLayout>


    <Button
        android:id="@+id/confirm_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle1"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:textAllCaps="false"/>

</LinearLayout>