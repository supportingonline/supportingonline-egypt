<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:id="@+id/d_share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/rectangle_stroke_edite"
            android:padding="@dimen/_10sdp"/>


    <ImageView
        android:id="@+id/d_share_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginVertical="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:scaleType="fitXY"
        style="@style/ImageThyme"
        android:transitionName="trans"
        />



        <RelativeLayout

            android:id="@+id/d_share_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/_3sdp"
            android:background="@drawable/rectangle2"


            >


            <TextView
                android:id="@+id/d_friend_chattext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/share"
                android:fontFamily="@font/flor"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                android:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/d_friend_chattext"
                android:layout_marginHorizontal="@dimen/_15sdp"/>
        </RelativeLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>