<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layoutDirection="ltr"
           android:weightSum="4">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/name"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold|italic"
                   android:layout_centerInParent="true"
                   />
           </RelativeLayout>
           <EditText
               android:id="@+id/setting_edit_name"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:background="@drawable/rectangle_stroke_edite"
               android:text="@string/app_name"
               android:textColor="@color/gray"
               android:textSize="@dimen/_10sdp"
               android:padding="@dimen/_6sdp"
               android:inputType="textNoSuggestions"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layoutDirection="ltr"
           android:weightSum="4">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/email"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold|italic"
                   android:layout_centerInParent="true"
                   />
           </RelativeLayout>
           <EditText
               android:id="@+id/setting_edit_email"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:background="@drawable/rectangle_stroke_edite"
               android:text="@string/app_name"
               android:textColor="@color/gray"
               android:textSize="@dimen/_10sdp"
               android:padding="@dimen/_6sdp"
               android:clickable="false"

               />


       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layoutDirection="ltr"
           android:weightSum="4">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/phone"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold|italic"
                   android:layout_centerInParent="true"
                   />
           </RelativeLayout>
           <EditText
               android:id="@+id/setting_edit_phone"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:background="@drawable/rectangle_stroke_edite"
               android:text="@string/app_name"
               android:textColor="@color/gray"
               android:textSize="@dimen/_10sdp"
               android:padding="@dimen/_6sdp"
               android:inputType="phone"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layoutDirection="ltr"
           android:weightSum="4">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/education"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold|italic"
                   android:layout_centerInParent="true"
                   />
           </RelativeLayout>
           <EditText
               android:id="@+id/setting_edit_education"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:background="@drawable/rectangle_stroke_edite"
               android:text="@string/app_name"
               android:textColor="@color/gray"
               android:textSize="@dimen/_10sdp"
               android:padding="@dimen/_6sdp"
               android:inputType="textNoSuggestions"
               />


       </LinearLayout>


       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layoutDirection="ltr"
           android:weightSum="4">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/location"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold|italic"
                   android:layout_centerInParent="true"
                   />
           </RelativeLayout>
           <EditText
               android:id="@+id/setting_edit_location"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:background="@drawable/rectangle_stroke_edite"
               android:text="@string/app_name"
               android:textColor="@color/gray"
               android:textSize="@dimen/_10sdp"
               android:padding="@dimen/_6sdp"
               android:inputType="textNoSuggestions"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layoutDirection="ltr"
           android:weightSum="4">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:layout_weight="1">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/about"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold|italic"
                   android:layout_centerInParent="true"
                   />
           </RelativeLayout>
           <EditText
               android:id="@+id/setting_edit_about"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:background="@drawable/rectangle_stroke_edite"
               android:text="@string/app_name"
               android:textColor="@color/gray"
               android:textSize="@dimen/_10sdp"
               android:padding="@dimen/_6sdp"
               android:inputType="textNoSuggestions"
               />


       </LinearLayout>


       <Button
           android:id="@+id/setting_btn"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/_30sdp"
           android:layout_gravity="center"
           android:background="@drawable/rectangle1"
           android:backgroundTint="@color/colorAccent"
           android:text="@string/submit"
           android:textColor="@color/white"
           android:layout_marginTop="@dimen/_20sdp"
           android:paddingHorizontal="@dimen/_20sdp"
           android:textAllCaps="false"/>


   </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>