<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatFriendsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chatFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/chatfriends_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_don_t_have_messages_yet"
        android:textAlignment="center"
        android:fontFamily="@font/flor"
        android:textColor="@color/black"/>


    <ProgressBar
        android:id="@+id/chatfriends_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_2sdp"
        style="?android:attr/progressBarStyleSmall"
        />

</LinearLayout>